<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="@dimen/dp_12"
    android:background="@drawable/bg_rec_white"
    android:layout_marginBottom="@dimen/dp_8">

    <TextView
        android:id="@+id/tv_equipment_name"
        android:layout_width="@dimen/dp_0"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:textColor="@color/c_303133"
        android:textSize="@dimen/sp_16"
        android:textStyle="bold"
        tools:text="装置名称"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"/>

    <TextView
        android:id="@+id/tv_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/c_67C23A"
        android:textSize="@dimen/sp_10"
        android:layout_marginLeft="@dimen/dp_8"
        tools:text="可用"
        android:background="@drawable/bg_rec_green"
        android:paddingLeft="@dimen/dp_8"
        android:paddingRight="@dimen/dp_8"
        android:paddingTop="@dimen/dp_4"
        android:paddingBottom="@dimen/dp_4"
        app:layout_constraintTop_toTopOf="@+id/tv_equipment_name"
        app:layout_constraintBottom_toBottomOf="@+id/tv_equipment_name"
        app:layout_constraintLeft_toRightOf="@+id/tv_equipment_name"/>

    <TextView
        android:id="@+id/tv_device_code"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/c_909399"
        android:textSize="@dimen/sp_12"
        android:layout_marginTop="@dimen/dp_4"
        tools:text="ZZ202105180987"
        app:layout_constraintTop_toBottomOf="@+id/tv_equipment_name"
        app:layout_constraintLeft_toLeftOf="@+id/tv_equipment_name" />

    <!-- 所属装置-->
    <TextView
        android:id="@+id/tv_belong_device_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/belong_device"
        android:textColor="@color/c_909399"
        android:textSize="@dimen/sp_14"
        android:layout_marginTop="@dimen/dp_4"
        app:layout_constraintTop_toBottomOf="@+id/tv_device_code"
        app:layout_constraintLeft_toLeftOf="@+id/tv_device_code" />

    <TextView
        android:id="@+id/tv_belong_device"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/c_303133"
        android:textSize="@dimen/sp_14"
        android:layout_marginLeft="@dimen/dp_8"
        tools:text="1111"
        app:layout_constraintTop_toTopOf="@+id/tv_belong_device_title"
        app:layout_constraintBottom_toBottomOf="@+id/tv_belong_device_title"
        app:layout_constraintLeft_toRightOf="@+id/tv_belong_device_title"/>

    <!-- 所属区域-->
    <TextView
        android:id="@+id/tv_belong_area_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/belong_area1"
        android:textColor="@color/c_909399"
        android:textSize="@dimen/sp_14"
        android:layout_marginTop="@dimen/dp_4"
        app:layout_constraintTop_toBottomOf="@+id/tv_belong_device_title"
        app:layout_constraintLeft_toLeftOf="@+id/tv_belong_device_title" />

    <TextView
        android:id="@+id/tv_belong_area"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/c_303133"
        android:textSize="@dimen/sp_14"
        android:layout_marginLeft="@dimen/dp_8"
        tools:text="222"
        app:layout_constraintTop_toTopOf="@+id/tv_belong_area_title"
        app:layout_constraintBottom_toBottomOf="@+id/tv_belong_area_title"
        app:layout_constraintLeft_toRightOf="@+id/tv_belong_area_title"/>


</androidx.constraintlayout.widget.ConstraintLayout>